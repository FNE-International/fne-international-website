---

<BaseLayout title="Volunteer Trips" breadcrumbs={[{ label: 'Get Involved', href: '/get-involved' }, { label: 'Volunteer Trips' }]}>
  <!-- Hero Section -->
  <HeroSection
    badge="Service Trips"
    title="Volunteer"
    titleAccent="Trips"
    subtitle="Join a life-changing service trip and work alongside communities in Nicaragua, Peru, or the Dominican Republic."
    image="/trips/hero.jpg"
    imageAlt="Medical volunteers with child"
    imagePosition="center 10%"
  />

  <!-- Photo Banner -->
  <Section background="gray" padding="sm">
    <div class="w-full overflow-hidden">
      <div class="photo-grid photo-grid-4 max-w-7xl mx-auto px-4">
        <PhotoCard image="/trips/trip-1.jpg" alt="Volunteer group in Nicaragua" />
        <PhotoCard image="/trips/trip-2.jpg" alt="Volunteer with children doing crafts" animationDelay={100} />
        <PhotoCard image="/trips/trip-3.jpg" alt="Volunteers visiting classroom" animationDelay={200} />
        <PhotoCard image="/trips/trip-4.jpg" alt="Community activity with children" animationDelay={300} />
      </div>
    </div>
  </Section>

  <!-- Trip Destinations -->
  <Section background="white">
    <Container>
      <SectionHeader
        label="Where We Go"
        title="Trip Destinations"
        subtitle="Choose a destination and we'll help you plan the perfect volunteer experience."
        labelColor="green"
      />

      <div class="destinations-grid">
        {tripDestinations.map((dest, index) => (
          <DestinationCard
            country={dest.country}
            flag={dest.flag}
            location={dest.location}
            image={dest.image}
            description={dest.description}
            focus={dest.focus}
            duration={dest.duration}
            cost={dest.cost}
            animationDelay={(index + 1) * 100}
          />
        ))}
      </div>

      <div class="text-center mt-8">
        <p class="text-gray-500">
          Want to organize a custom trip for your group? <a href="/contact" class="text-[#2D8B4E] font-semibold hover:underline">Contact us</a>
        </p>
      </div>
    </Container>
  </Section>

  <!-- Trip Types -->
  <Section background="gray" withGrid>
    <Container>
      <SectionHeader
        label="Trip Focus Areas"
        title="Types of Service Trips"
        subtitle="Choose a trip that matches your interests and skills."
        labelColor="orange"
      />

      <div class="grid md:grid-cols-3 gap-8">
        {tripTypes.map((type, index) => (
          <div class={`type-card type-card-${type.color} animate-on-scroll delay-${(index + 1) * 100}`}>
            <div class={`type-icon type-icon-${type.color}`}>
              <div class="icon-3d">
                <div class="icon-3d-inner animate-rotate-3d">
                  <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={type.icon} />
                  </svg>
                </div>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mt-6">{type.title}</h3>
            <p class="text-gray-600 mt-3">{type.description}</p>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- What's Included -->
  <Section background="white">
    <Container>
      <SectionHeader
        label="Trip Details"
        title="What's Included"
        subtitle="Your trip cost covers everything you need for a meaningful experience."
        labelColor="teal"
      />

      <div class="includes-grid">
        {tripIncludes.map((item, index) => (
          <div class={`include-item animate-on-scroll delay-${(index + 1) * 100}`}>
            <div class="include-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
              </svg>
            </div>
            <span class="text-gray-700 font-medium">{item.item}</span>
          </div>
        ))}
      </div>

      <div class="not-included animate-on-scroll">
        <h4 class="font-bold text-gray-900 mb-3">Not Included:</h4>
        <p class="text-gray-600">International airfare, passport/visa fees, personal expenses, and optional activities.</p>
      </div>
    </Container>
  </Section>

  <!-- Testimonial -->
  <Section background="gradient">
    <Container size="md">
      <div class="testimonial-card animate-on-scroll">
        <div class="icon-3d mb-6">
          <div class="icon-3d-inner animate-rotate-3d">
            <div class="testimonial-quote-icon">
              <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
            </div>
          </div>
        </div>
        <blockquote class="text-xl md:text-2xl text-gray-700 italic leading-relaxed mb-6">
          {testimonials[0].quote}
        </blockquote>
        <div class="testimonial-attribution">
          <div class="text-gray-900 font-semibold">{testimonials[0].name}</div>
          <div class="text-sm text-gray-500">{testimonials[0].trip}</div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQ -->
  <Section background="white">
    <Container size="md">
      <SectionHeader
        label="Questions?"
        title="Frequently Asked Questions"
      />

      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <FAQItem
            question={faq.question}
            answer={faq.answer}
            index={index}
            animationDelay={(index + 1) * 100}
          />
        ))}
      </div>
    </Container>
  </Section>

  <!-- CTA -->
  <CTASection
    title="Ready to Join a Trip?"
    subtitle="Take the first step toward a life-changing experience. Apply now or contact us with questions."
    icon="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    primaryButtonText="Apply Now"
    primaryButtonLink="/contact"
    secondaryButtonText="Contact Us"
    secondaryButtonLink="/contact"
  />
</BaseLayout>

<style>
  /* Destinations grid */
  .destinations-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 1024px) {
    .destinations-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .destinations-grid {
      grid-template-columns: 1fr;
    }
  }



  /* Type cards */
  .type-card {
    background: white;
    padding: 2.5rem;
    border-radius: 24px;
    border: 2px solid transparent;
    text-align: center;
    transition: all 0.4s ease;
  }

  .type-card-green {
    border-color: rgba(45, 139, 78, 0.15);
  }

  .type-card-orange {
    border-color: rgba(247, 147, 30, 0.15);
  }

  .type-card-teal {
    border-color: rgba(61, 154, 139, 0.15);
  }

  .type-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 60px rgba(45, 139, 78, 0.15);
  }

  .type-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
  }

  .type-icon-green {
    background: linear-gradient(135deg, rgba(45, 139, 78, 0.1), rgba(61, 154, 139, 0.1));
    color: #2D8B4E;
  }

  .type-icon-orange {
    background: linear-gradient(135deg, rgba(247, 147, 30, 0.1), rgba(45, 139, 78, 0.1));
    color: #F7931E;
  }

  .type-icon-teal {
    background: linear-gradient(135deg, rgba(61, 154, 139, 0.1), rgba(45, 139, 78, 0.1));
    color: #3D9A8B;
  }

  .type-card:hover .type-icon-green {
    background: linear-gradient(135deg, #2D8B4E, #3D9A8B);
    color: white;
  }

  .type-card:hover .type-icon-orange {
    background: linear-gradient(135deg, #F7931E, #ff6b00);
    color: white;
  }

  .type-card:hover .type-icon-teal {
    background: linear-gradient(135deg, #3D9A8B, #2D8B4E);
    color: white;
  }

  /* Includes grid */
  .includes-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .includes-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .includes-grid {
      grid-template-columns: 1fr;
    }
  }

  .include-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, rgba(45, 139, 78, 0.03), rgba(247, 147, 30, 0.03));
    border-radius: 12px;
    border: 1px solid rgba(45, 139, 78, 0.1);
  }

  .include-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: linear-gradient(135deg, #2D8B4E, #3D9A8B);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .not-included {
    max-width: 600px;
    margin: 2rem auto 0;
    padding: 1.5rem;
    background: rgba(247, 147, 30, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(247, 147, 30, 0.15);
    text-align: center;
  }

  /* Testimonial */
  .testimonial-card {
    text-align: center;
    background: white;
    padding: 3rem;
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(45, 139, 78, 0.1);
  }

  .testimonial-quote-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(45, 139, 78, 0.1), rgba(247, 147, 30, 0.1));
    border-radius: 20px;
    color: #2D8B4E;
  }

  .testimonial-attribution {
    margin-top: 1.5rem;
  }
</style>

<script>
  document.querySelectorAll('.faq-question').forEach(button => {
    button.addEventListener('click', () => {
      const index = button.getAttribute('data-faq');
      const answer = document.querySelector(`[data-faq-answer="${index}"]`);
      const chevron = button.querySelector('.faq-chevron');

      answer?.classList.toggle('open');
      chevron?.classList.toggle('open');
    });
  });
</script>
