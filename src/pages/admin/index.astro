export const prerender = false;

// Check if already logged in via cookie
const sessionCookie = Astro.cookies.get('admin_session');
if (sessionCookie?.value === 'authenticated') {
  return Astro.redirect('/admin/dashboard');
}

// Handle login form submission
let error = '';
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const password = formData.get('password')?.toString();

    // Check password against environment variable
    // In Vercel serverless, process.env is the primary source
    const adminPassword = (globalThis as any).process?.env?.ADMIN_PASSWORD || import.meta.env.ADMIN_PASSWORD;

    if (!adminPassword) {
      error = 'Admin password not configured. Please redeploy after setting ADMIN_PASSWORD in Vercel.';
    } else if (password === adminPassword) {
      // Set session cookie (expires in 24 hours)
      Astro.cookies.set('admin_session', 'authenticated', {
        path: '/',
        maxAge: 60 * 60 * 24, // 24 hours
        httpOnly: true,
        secure: import.meta.env.PROD,
        sameSite: 'strict',
      });
      return Astro.redirect('/admin/dashboard');
    } else {
      error = 'Invalid password. Please try again.';
    }
  } catch (e) {
    error = 'An error occurred. Please try again.';
  }
}
