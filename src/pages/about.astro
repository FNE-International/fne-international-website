---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import Section from '../components/Section.astro';
import Container from '../components/Container.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ContentBlock from '../components/ContentBlock.astro';
import CTASection from '../components/CTASection.astro';
import PartnerMarquee from '../components/PartnerMarquee.astro';
import PhotoCard from '../components/PhotoCard.astro';

const partners = [
  { name: 'Sights on Health', icon: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z' },
  { name: 'Mending Faces', icon: 'M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  { name: 'Asociación Wiñaypaq', icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z' },
  { name: 'Asociación Latidos', icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z' },
];

---

<BaseLayout title="About Us" breadcrumbs={[{ label: 'About Us' }]}>
  <!-- Hero Section -->
  <HeroSection
    badge="Since 1990"
    title="Who We"
    titleAccent="Are"
    subtitle="A dedicated team making a big difference in the lives of people and communities in Nicaragua, Peru and the Dominican Republic."
    image="/about-hero.jpg"
    imageAlt="FNE International Team"
    imagePosition="center"
  />

  <!-- Photo Banner -->
  <Section background="gray" padding="sm">
    <div class="w-full overflow-hidden">
      <div class="photo-grid photo-grid-4 max-w-7xl mx-auto px-4">
        <PhotoCard image="/about-team-event.jpg" alt="FNE team members at community event" />
        <PhotoCard image="/about-volunteers.jpg" alt="Volunteers working on housing construction" animationDelay={100} />
        <PhotoCard image="/about-planning.jpg" alt="Community planning meeting" animationDelay={200} />
        <PhotoCard image="/about-celebration.jpg" alt="Celebration with partner organization" animationDelay={300} />
      </div>
    </div>
  </Section>

  <!-- Mission & Vision -->
  <Section background="white">
    <Container size="md">
      <SectionHeader
        label="What Drives Us"
        title="Mission &"
        titleAccent="Vision"
      />

      <div class="space-y-16">
        <!-- Mission -->
        <div class="animate-slide-left">
          <ContentBlock
            label="Our Mission"
            title="Partnering for"
            titleAccent="Change"
            image="/education.jpg"
            imageAlt="Education programs"
            labelColor="green"
          >
            <p>
              FNE International partners with communities in developing nations to identify opportunities to advance <span class="text-gray-900 font-medium">housing</span>, <span class="text-gray-900 font-medium">health</span>, and <span class="text-gray-900 font-medium">education</span>, aiming to empower individuals as engaged members of their community and the world.
            </p>
          </ContentBlock>
        </div>

        <!-- Vision -->
        <div class="animate-slide-right">
          <ContentBlock
            label="Our Vision"
            title="Equal"
            titleAccent="Opportunity"
            image="/vision.jpg"
            imageAlt="Our vision for communities"
            labelColor="orange"
            reverse
          >
            <p class="mb-6">
              Communities throughout Latin America having equal opportunities for all in education, infrastructure, health, and food sovereignty.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="pillar-tag">Education</span>
              <span class="pillar-tag">Infrastructure</span>
              <span class="pillar-tag">Health</span>
              <span class="pillar-tag">Food Sovereignty</span>
            </div>
          </ContentBlock>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Partners -->
  <Section background="gray" withGrid>
    <Container>
      <SectionHeader
        label="Collaboration"
        title="Our Partners, Our"
        titleAccent="Family"
        subtitle="Get to know some of the organizations across Latin America we are partnering with to make lasting change."
        labelColor="teal"
      />
    </Container>
    <PartnerMarquee partners={partners} speed="slow" />
  </Section>

  <!-- CTA -->
  <CTASection
    title="Join Our Mission"
    subtitle="Help us create pathways out of poverty for families across Latin America."
    icon="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
  />
</BaseLayout>

<style>
  /* Pillar tags */
  .pillar-tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, rgba(45, 139, 78, 0.08), rgba(61, 154, 139, 0.08));
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #2D8B4E;
    border: 1px solid rgba(45, 139, 78, 0.15);
    transition: all 0.3s ease;
  }

  .pillar-tag:hover {
    background: rgba(45, 139, 78, 0.12);
    border-color: rgba(45, 139, 78, 0.3);
    transform: translateY(-2px);
  }

</style>
