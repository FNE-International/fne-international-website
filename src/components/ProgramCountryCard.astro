---
interface Props {
  name: string;
  flag: string;
  region: string;
  description: string;
  programs: string[];
  stats: { value: string; label: string }[];
  href: string;
  image: string;
}

const { name, flag, region, description, programs, stats, href, image } = Astro.props;
---

<div class="country-card animate-on-scroll">
  <div class="country-image">
    <img src={image} alt={name} loading="lazy" />
    <div class="country-image-overlay">
      <span class="country-flag">{flag}</span>
    </div>
  </div>

  <div class="country-content">
    <div class="country-header">
      <h3 class="country-name">{name}</h3>
      <span class="country-region">{region}</span>
    </div>

    <p class="country-desc">{description}</p>

    <div class="country-programs">
      {programs.map((program) => (
        <span class="program-tag">{program}</span>
      ))}
    </div>

    <div class="country-stats">
      {stats.map((stat) => (
        <div class="stat">
          <span class="stat-value">{stat.value}</span>
          <span class="stat-label">{stat.label}</span>
        </div>
      ))}
    </div>

    <a href={href} class="country-link">
      <span>Explore Programs</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </div>
</div>

<style>
  .country-card {
    background: white;
    border-radius: 24px;
    border: 1px solid rgba(45, 139, 78, 0.1);
    overflow: hidden;
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .country-card:hover {
    border-color: rgba(45, 139, 78, 0.3);
    box-shadow: 0 20px 60px rgba(45, 139, 78, 0.12);
    transform: translateY(-8px);
  }

  .country-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .country-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .country-card:hover .country-image img {
    transform: scale(1.05);
  }

  .country-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.5), transparent 50%);
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
  }

  .country-flag {
    font-size: 2.5rem;
    line-height: 1;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
  }

  .country-content {
    padding: 1.5rem 2rem 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .country-header {
    margin-bottom: 1rem;
  }

  .country-name {
    font-size: 1.5rem;
    font-weight: 800;
    color: #111827;
    margin: 0;
  }

  .country-region {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .country-desc {
    color: #4b5563;
    line-height: 1.6;
    margin-bottom: 1.25rem;
    flex-grow: 1;
  }

  .country-programs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .program-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(45, 139, 78, 0.08);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    color: #2D8B4E;
  }

  .country-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    padding: 1.25rem 0;
    border-top: 1px solid rgba(45, 139, 78, 0.1);
    border-bottom: 1px solid rgba(45, 139, 78, 0.1);
    margin-bottom: 1.5rem;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #2D8B4E, #F7931E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .stat-label {
    display: block;
    font-size: 0.6875rem;
    color: #6b7280;
    margin-top: 0.25rem;
  }

  .country-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: #2D8B4E;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .country-link:hover {
    color: #F7931E;
  }

  .country-link svg {
    transition: transform 0.3s ease;
  }

  .country-link:hover svg {
    transform: translateX(4px);
  }
</style>
