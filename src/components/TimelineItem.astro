---
interface Props {
  year: string;
  title?: string;
  description?: string;
  event?: string;
  month?: string;
  icon: string;
  showLine?: boolean;
  showImage?: boolean;
  animationDelay?: number;
}

const {
  year,
  title,
  description,
  event,
  month,
  icon,
  showLine = true,
  showImage = false,
  animationDelay = 0
} = Astro.props;

const delayClass = animationDelay > 0 ? `delay-${animationDelay}` : '';
const displayText = event || description;
const displayTitle = title || (event ? null : null);
---

<div class={`timeline-item animate-on-scroll ${delayClass}`}>
  <div class="timeline-marker">
    <div class="timeline-icon">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
      </svg>
    </div>
    {showLine && <div class="timeline-line"></div>}
  </div>
  <div class="timeline-content">
    <div class="timeline-year">{year}</div>
    {month && <p class="text-sm text-gray-500">{month}</p>}
    {displayTitle && <h3 class="font-bold text-gray-900 mt-1">{displayTitle}</h3>}
    {displayText && <p class={`text-gray-600 ${displayTitle ? 'text-sm mt-2' : 'mt-1'}`}>{displayText}</p>}

    {showImage && (
      <div class="timeline-image mt-3">
        <div class="image-placeholder image-placeholder-wide">
          <svg class="image-placeholder-icon w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="image-placeholder-text text-xs">Photo from {year}{displayText ? `: ${displayText.substring(0, 30)}...` : ''}</span>
        </div>
      </div>
    )}
  </div>
</div>

<style>
  .timeline-item {
    display: flex;
    gap: 1.5rem;
    padding-bottom: 2.5rem;
  }

  .timeline-marker {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .timeline-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: linear-gradient(135deg, #2D8B4E, #3D9A8B);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
    z-index: 1;
    box-shadow: 0 4px 15px rgba(45, 139, 78, 0.3);
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-icon {
    transform: scale(1.1);
    box-shadow: 0 6px 25px rgba(45, 139, 78, 0.4);
  }

  .timeline-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(to bottom, #2D8B4E, #F7931E);
    margin-top: 0.5rem;
    border-radius: 2px;
  }

  .timeline-content {
    background: white;
    padding: 1.5rem;
    border-radius: 16px;
    border: 1px solid rgba(45, 139, 78, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
    transition: all 0.4s ease;
    flex: 1;
  }

  .timeline-content:hover {
    box-shadow: 0 20px 60px rgba(45, 139, 78, 0.15);
    transform: translateY(-4px);
    border-color: rgba(45, 139, 78, 0.2);
  }

  .timeline-year {
    font-size: 1.75rem;
    font-weight: 800;
    background: linear-gradient(135deg, #2D8B4E, #F7931E);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .timeline-image {
    max-width: 300px;
  }

  @media (max-width: 768px) {
    .timeline-item {
      gap: 1rem;
    }
  }
</style>
