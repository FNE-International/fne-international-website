---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { class: className = '', size = 'lg' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-6xl',
};
---

<div class:list={[sizeClasses[size], 'mx-auto px-4 sm:px-6 lg:px-8', className]}>
  <slot />
</div>
