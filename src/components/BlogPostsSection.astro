---
import Section from './Section.astro';
import Container from './Container.astro';
import SectionHeader from './SectionHeader.astro';
import { getBlogPosts, getCategoryLabel, getCategoryColors, truncateText } from '../lib/blog';

interface Props {
  title?: string;
  subtitle?: string;
  label?: string;
  limit?: number;
  showViewAll?: boolean;
}

const {
  title = 'From Our Blog',
  subtitle = 'Stories and updates from our work in the community.',
  label = 'Latest Stories',
  limit = 3,
  showViewAll = true,
} = Astro.props;

// Fetch latest blog posts from Content Collections
const posts = await getBlogPosts({ limit });
---

{posts.length > 0 && (
  <Section background="white">
    <Container>
      <SectionHeader
        label={label}
        title={title}
        subtitle={subtitle}
        labelColor="teal"
      />

      <div class="grid md:grid-cols-3 gap-8">
        {posts.map((post) => {
          const colors = getCategoryColors(post.data.category);
          return (
            <article class="blog-card group animate-on-scroll">
              <a href={`/blog/${post.slug}`} class="block relative aspect-[16/10] overflow-hidden rounded-t-2xl">
                {post.data.featuredImage ? (
                  <img
                    src={post.data.featuredImage}
                    alt={post.data.featuredImageAlt || post.data.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-emerald-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
                <span class={`absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs font-semibold ${colors.bg} ${colors.text}`}>
                  {getCategoryLabel(post.data.category)}
                </span>
              </a>
              <div class="p-5 bg-white rounded-b-2xl">
                <h3 class="mt-2">
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-lg font-bold text-gray-900 hover:text-[#2D8B4E] transition-colors line-clamp-2"
                  >
                    {post.data.title}
                  </a>
                </h3>
                <p class="mt-2 text-gray-600 text-sm line-clamp-2">
                  {truncateText(post.data.excerpt, 100)}
                </p>
              </div>
            </article>
          );
        })}
      </div>

      {showViewAll && (
        <div class="text-center mt-10">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-[#2D8B4E] text-[#2D8B4E] font-bold rounded-full hover:bg-[#2D8B4E] hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            View All Posts
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      )}
    </Container>
  </Section>
)}

<style>
  .blog-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(45, 139, 78, 0.1);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
  }

  .blog-card:hover {
    transform: translateY(-8px);
    border-color: rgba(45, 139, 78, 0.2);
    box-shadow: 0 20px 60px rgba(45, 139, 78, 0.1);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
