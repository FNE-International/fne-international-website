---
const navItems = [
  { label: 'About', href: '/about', children: [
    { label: 'Our Story', href: '/about/our-story' },
    { label: 'Our Team', href: '/about/team' },
    { label: 'Our Approach', href: '/about/approach' },
    { label: 'Financials', href: '/about/financials' },
  ]},
  { label: 'Programs', href: '/programs', children: [
    { label: 'Nicaragua', href: '/programs/nicaragua' },
    { label: 'Peru', href: '/programs/peru' },
    { label: 'Dominican Republic', href: '/programs/dominican-republic' },
  ]},
  { label: 'Get Involved', href: '/get-involved', children: [
    { label: 'Volunteer Trips', href: '/get-involved/trips' },
    { label: 'Remote Volunteering', href: '/get-involved/remote' },
    { label: 'Internships', href: '/get-involved/internships' },
    { label: 'Partner With Us', href: '/get-involved/partners' },
  ]},
  { label: 'Hope Collective', href: '/hope-collective' },
  { label: 'Blog', href: '/blog' },
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="/logo.avif" alt="FNE International - Pathways Out of Poverty" class="h-12 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class="text-gray-700 hover:text-[#2D8B4E] font-medium py-2 text-lg"
            >
              {item.label}
              {item.children && (
                <svg class="inline w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            {item.children && (
              <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="py-2">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class="block px-5 py-2.5 text-base text-gray-700 hover:bg-gray-100 hover:text-[#2D8B4E]"
                    >
                      {child.label}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
        <a
          href="/donate"
          class="bg-[#F7931E] text-white px-7 py-2.5 rounded-lg font-semibold text-lg hover:bg-[#e8850f] transition-colors"
        >
          Donate
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-700"
        aria-label="Open menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
    <div class="px-4 py-4 space-y-2">
      {navItems.map((item) => (
        <div>
          <a href={item.href} class="block py-2 text-gray-700 font-medium">{item.label}</a>
          {item.children && (
            <div class="pl-4 space-y-1">
              {item.children.map((child) => (
                <a href={child.href} class="block py-1 text-sm text-gray-600 hover:text-[#2D8B4E]">
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <a href="/donate" class="block w-full bg-[#F7931E] text-white px-4 py-2 rounded-md text-center font-medium mt-4">
        Donate
      </a>
    </div>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
