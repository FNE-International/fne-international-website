---
interface Props {
  quote: string;
  attribution?: string;
  subtext?: string;
}

const { quote, attribution, subtext } = Astro.props;
---

<div class="quote-card animate-on-scroll">
  <div class="icon-3d mb-6">
    <div class="icon-3d-inner animate-rotate-3d">
      <div class="quote-icon">
        <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
      </div>
    </div>
  </div>
  <blockquote class="text-xl md:text-2xl text-gray-700 italic leading-relaxed mb-6">
    {quote}
  </blockquote>
  {(attribution || subtext) && (
    <div class="quote-attribution">
      {attribution && <div class="text-gray-900 font-semibold">{attribution}</div>}
      {subtext && <div class="text-sm text-gray-500">{subtext}</div>}
    </div>
  )}
</div>

<style>
  .quote-card {
    text-align: center;
    background: white;
    padding: 3rem;
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(45, 139, 78, 0.1);
  }

  .quote-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(45, 139, 78, 0.1), rgba(247, 147, 30, 0.1));
    border-radius: 20px;
    color: #2D8B4E;
  }

  .quote-attribution {
    margin-top: 1.5rem;
  }
</style>
